{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Student</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Nplace</th>
                <td>{{ student.nPlace }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">
            <a href="{{ path('student_index') }}" class="btn btn-info">Back to the list</a>
    </div>
    <div class="form-group">
            <a href="{{ path('student_edit', { 'id': student.id }) }}" class="btn btn-primary">Edit</a>
    </div>
    <div class="form-group">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
    </div>
</div>
{% endblock %}
