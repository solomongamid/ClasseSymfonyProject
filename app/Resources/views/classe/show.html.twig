{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Classe</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classe.name }}</td>
            </tr>
            <tr>
                <th>Placesnum</th>
                <td>{{ classe.placesNum }}</td>
            </tr>
        </tbody>
    </table>

    
    
    <div class="form-group">
        
            <a href="{{ path('classe_index') }}" class="btn btn-info">Back to the list</a>
        
    </div>
    <div class="form-group">
        
            <a href="{{ path('classe_edit', { 'id': classe.id }) }}" class="btn btn-primary">Edit</a>
        
    </div>
    <div class="form-group">    
        
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        
    </div>
    
    
</div>
{% endblock %}
